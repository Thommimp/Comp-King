<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/button_backgroundblack"/>



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:src="@mipmap/ic_launcher"
            android:layout_centerInParent="true"
            android:id="@+id/logo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sign up to experience jazz"
            android:textAlignment="center"
            android:layout_below="@+id/logo"
            android:textColor="@color/white"/>



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="Continue with phone number"
            android:textAllCaps="false"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button_backgroundgold"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="Email and password"
        android:layout_marginBottom="30dp"
        android:textAllCaps="false"
        android:layout_above="@+id/register"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/button_backgroundgold"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/google"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="Sign in with google"
        android:textAllCaps="false"
        android:layout_above="@+id/email"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_backgroundgold"/>



</RelativeLayout>